<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Check">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/jhonatan_luis_zarzuri_chauca"
        android:textSize="25dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/textView1"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Tipo de Asistencia"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_marginBottom="25dp"/>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="CHECKBOX"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginBottom="35dp"/>
    <CheckBox
        android:id="@+id/checkDistancia"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DISTANCIA"/>
    <CheckBox
        android:id="@+id/checkSemiPresencial"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEMIPRECENSIAL"/>
    <CheckBox
        android:id="@+id/checkPresencial"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRESENCIAL"/>

</LinearLayout>